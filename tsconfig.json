{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "baseUrl": ".",
    "paths": {
      "@/tests/*": ["../test/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": []
}